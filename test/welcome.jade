    script.
      function keypressed(e) {
      if (e.keyCode == 13) {
      goToRoom();
      }
      }
      function goToRoom() {
      console.log('in goToRoom');
      console.log(document.getElementById('form1').elements[0].value);
      roomName = document.getElementById('form1').elements[0].value;
      document.location.href = 'videos?danceroom=' + roomName;
      }
      function hideEmot() {
      document.getElementById("emot_overlay").style.display = 'none';
      }
      function hideMessage(id) {
      //code
      document.getElementById(id).style.display = "none";
      }
      function hoverEff(e) {
      e.style.opacity = "1.0";
      face_neutral.src = "welcomePage_files/face_" + e.id.substring(4) + ".png";
      }
      function hoverOff(e) {
      e.style.opacity = "0.5";
      face_neutral.src = "welcomePage_files/face_neutral.png";
      }
      function changeMsg(type, msg) {
      msgTxt = document.getElementById("message");
      msgTxt.innerHTML = "<b><u>" + type + "<br /><br /></u></b>" + msg;
      console.log("msg updated");
      emot_overlay.style.display = 'none';
      message_overlay.style.display = 'inline';
      setTimeout(function() {
      message_overlay.style.display = 'none';
      hideScreen.style.display = "none"
      }, 5000);
      }
      function clickIt(e) {
      switch (e.id) {
      case "btn_happy":
      changeMsg("Happy", "We're ecstatic that you are happy!<br />Let's rock the party!");
      //alert ("We're ecstatic that you are happy!\\\\nLet's rock the party!");
      btn_happy.style.opacity = 1.0;
      break;
      case "btn_sad":
      changeMsg("Sad", "Sad? Let's see if we can fix that!");
      btn_sad.style.opacity = 1.0;
      break;
      case "btn_tired":
      changeMsg("Tired", "Tired? Music and dancing will lift you up! :)");
      btn_tired.style.opacity = 1.0;
      break;
      case "btn_angry":
      changeMsg("Angry", "Oh, I'm sorry to hear that. <br />Let's see if we can cool you down!");
      btn_angry.style.opacity = 1.0;
      break;
      case "btn_worried":
      changeMsg("Worried", "Don't Worry. Everything will be ok :)");
      btn_worried.style.opacity = 1.0;
      break;
      case "btn_scared":
      changeMsg("Scared", "The only thing to fear is fear itself - FDR");
      btn_scared.style.opacity = 1.0;
      break;
      }
      //hideScreen.style.display="none";
      //emot_overlay.style.display="none";
      }
