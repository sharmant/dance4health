doctype html
html
  head
    meta(charset='UTF-8')
    title Owl Carousel Demo
    script(src='http://s.codepen.io/assets/libs/modernizr.js', type='text/javascript')
    meta(name='viewport', content='width=device-width')
    link(rel='stylesheet', href='carousel_files/normalize.css')
